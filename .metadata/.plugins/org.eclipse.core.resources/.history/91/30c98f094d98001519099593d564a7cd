    <script>
    
    	function changePosition(){
    		var type=$("#type").find("option:selected").text();
    		var oldtype='<?php echo $type?>';
    		if(type!=oldtype){
				window.location.href="advice.php?type="+type+"";
        	}
        }
    	  $(document).ready(function() {
