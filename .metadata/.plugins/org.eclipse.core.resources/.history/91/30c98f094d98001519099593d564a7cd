	   function isdigit(s)
	   {
	   var r,re;
	   re = /\d*/i; //\d表示数字,*表示匹配多个数字
	   r = s.match(re);
	   return (r==s)?1:0;
	   }
	   
	   $("#btn").click(function(){
		   var gender=$("#gender").find("option:selected").text();
		   var age=$("#age").val();
		   var text=$("#input").val();
		   var uid=<?php echo $_SESSION['id']?>;

		   if(age==''||text==''){
				alert("内容不能为空");
				return;
			}

		   if(!isdigit(age)){
				alert("请输入正确的年龄");
				$("#age").val('');
				return;
			}
		   var xmlHttp=GetXmlHttpObject();

			if (xmlHttp==null){
		 		alert ("Browser does not support HTTP Request")
		 		return
		 	}
		 	xmlHttp.onreadystatechange = sign_up_callback;
			xmlHttp.open("POST", "sendMessage.php", false);
			xmlHttp.setRequestHeader("Content-Type",
					"application/x-www-form-urlencoded");
			xmlHttp.send("uid="+uid+"&did="+did+"&gender="+gender+"&age="+age+"&text="+text);
	   });	   
	   var xmlHttp=null;
		function GetXmlHttpObject(){
			xmlHttp=null;
			try{
			// Firefox, Opera 8.0+, Safari
				xmlHttp=new XMLHttpRequest();
			}catch (e){
			// Internet Explorer
				try{
					xmlHttp=new ActiveXObject("Msxml2.XMLHTTP");
				}catch (e){
					xmlHttp=new ActiveXObject("Microsoft.XMLHTTP");
				}
			}
			return xmlHttp;
		}
		function sign_up_callback(){
			if (xmlHttp.readyState==4 || xmlHttp.readyState=="complete") {
				
				if (xmlHttp.status == 200) {
					var data=xmlHttp.responseText;
					//alert(data);
					data=$.parseJSON(data);
					data=data.message;
					if(data=="send success"){
						alert("消息发送成功");			
					}else
						alert("发生了点小错误，请重试");
					}//if
				window.location.href="advice.php";
				}
			}
	}
