		});
		function drawPicture(year,month,day){
			var arr=getArray(year,month,day);
			var pieData = [
							{
								value: arr[0],
								color:"#F38630"
								,text: "熟睡"
							},
							{
								value : arr[1],
								color : "#E0E4CC"
								,text: "浅睡"
							},
							{
								value : arr[2],
								color : "#69D2E7"
								,text: "唤醒"
							}
						
						];

				var myPie = new Chart(document.getElementById("canvas").getContext("2d")).Pie(pieData);
		}
	 	window.onload=function(){
