<?php
	$name=$_POST['name'];
	$type=$_POST['type'];
	$position=$_POST['position'];
	include 'db.php';
	if(!($type=='医生'||$type=='教练')){
		$position=null;
	}
	$sql="update User set type='".$type."',position='".$position."' where name='".$name."';";
	$db->exec($sql);
	$arr = array('message' =>"update success");
	exit(json_encode($arr));
?>